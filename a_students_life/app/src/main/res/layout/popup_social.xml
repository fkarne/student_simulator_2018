<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/popUp_social_ll"
    tools:context="at.tugraz.morning08.a_students_life.MainPageActivity">

    <!-- TODO: add static buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <Button
            android:id="@+id/phoneCall_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="phoneCall_button_onClick"
            android:text="Freunde anrufen" />

        <Button
            android:id="@+id/meetFriends_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="meetFriends_button_onClick"
            android:text="Freunde treffen" />

        <Button
            android:id="@+id/partying_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="partying_button_onClick"
            android:text="Party!" />
    </LinearLayout>

</LinearLayout>